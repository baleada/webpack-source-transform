{
  "name": "@baleada/nifty-loader",
  "version": "0.0.2",
  "description": "A flexible webpack loader for markdown files",
  "main": "lib/index.js",
  "scripts": {
    "gen-transforms": "node scripts/generateIndex.js 'transforms'",
    "gen-stubs": "node scripts/generateIndex.js 'stubs'",
    "gen-util": "node scripts/generateIndex.js 'util'",
    "gen-all": "npm run gen-transforms && npm run gen-stubs && npm run gen-util",
    "empty": "node scripts/emptyDir.js 'lib'",
    "babelify": "npx babel src --out-dir lib",
    "prepare": "npm run gen-all && npm run empty && npm run babelify",
    "test": "npx ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/baleada/nifty-loader.git"
  },
  "keywords": [
    "baleada",
    "nifty",
    "webpack loader",
    "markdown"
  ],
  "author": {
    "name": "Alex Vipond",
    "email": "hello@alexvipond.dev",
    "url": "https://alexvipond.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/baleada/nifty-loader/issues"
  },
  "homepage": "https://gitlab.com/baleada/nifty-loader#readme",
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-private-methods": "^7.6.0",
    "@babel/preset-env": "^7.6.2",
    "@nuxtjs/eslint-config": "^1.1.2",
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-nuxt": "^0.4.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1"
  },
  "dependencies": {
    "front-matter": "^3.0.2",
    "markdown-it": "^10.0.0",
    "prismjs": "^1.17.1"
  }
}
